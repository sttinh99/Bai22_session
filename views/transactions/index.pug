    style.
      th,td{
      border: 1px soild black;
      text-align:center;
      }
      td.text{
        font-size: 20px;
        text-transform: uppercase;
        color: blue;
        font-weight: bold
      }
      table{
        width: 500px;
      }
    table.table
          tr
            th Name
            th Book  
            th Trạng Thái
            th Trả Sách
